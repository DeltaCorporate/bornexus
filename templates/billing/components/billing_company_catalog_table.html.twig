<div {{ attributes }}>
    <h2 class="text-2xl font-bold mb-4">Détail de la commande</h2>

    <table class="w-full">
        <thead>
        <th>#</th>
        <th>Produit</th>
        <th>Quantité</th>
        <th>Prix HT</th>
        <th>Réduction</th>
        <th>Total</th>
        </thead>
        <tbody>

        {% for billingCompanyCatalog in data %}
            <twig:Billing:BillingCompanyCatalogItem :billingCompanyCatalog="billingCompanyCatalog" />
        {% endfor %}
        </tbody>

        <tfoot>
        <tr>
            <td colspan="100%">
                <div class="p-2">
                    <twig:Button
                            text="Ajouter un item"
                            icon="fa fa-plus"
                            size="sm"
                            data-action="click->live#action"
                            data-action-name="addItem"
                            color="secondary"
                            textColor="text-base"
                            fontSize="sm"
                    />

                </div>


            </td>

        </tr>
        </tfoot>
    </table>
</div>