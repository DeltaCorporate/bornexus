<details class="relative group [&_summary::-webkit-details-marker]:hidden"   
{{ attributes|attribute2String }}>
<summary class="flex cursor-pointer items-center gap-3 justify-between {{ radius }} size-{{ size }} {{ textColor }} {{ weight }} bg-{{ color }} hover:brightness-75 transition-all">
<span class="text-sm font-medium flex gap-2 items-center">{{ text }}</span>
<span class="shrink-0 transition duration-300 group-open:-rotate-180">
<i class="fa fa-chevron-up"></i>
</span>
</summary>
    {% block content %}{% endblock %}
</details>