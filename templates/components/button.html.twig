{% if variant == 'solid' %}
  {% set bgColor = color %}
  {% set hoverEffect = 'brightness-75' %}
{% elseif variant == 'outline' %}
  {% set bgColor = 'transparent' %}
  {% set hoverEffect = 'bg-' ~ color %}
{% endif %}



<{{ balise }}
  {% if balise == 'a' %}
    type="{{ type }}"
    href="{{ href }}"
  {% endif %}

   class="inline-flex w-auto gap-2 items-center {{ radius }} justify-center transition-all border-{{ color }} border-{{ borderWidth }} cursor-pointer bg-{{ bgColor }} text-{{ fontSize }} size-{{ size }} {{ weight }} hover:{{ hoverEffect }} {{ textColor }} focus:outline-none focus:ring {{ class }}"
  {{ attributes|attribute2String }}
>

{% if icon is not empty %}
   <i class='{{ icon }}'></i>
{% endif %}
{{ text }}
</{{ balise }}>