{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Companies - Bornenexus{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Siret</th>
                <th>Zip</th>
                <th>Address</th>
                <th>Country</th>
                <th>Website</th>
                <th>Paypal_id</th>
                <th>Stripe_id</th>
                <th>Iban</th>
                <th>Tva</th>
                <th>Tva_reason</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.description }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.zip }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.country }}</td>
                <td>{{ company.website }}</td>
                <td>{{ company.paypalId }}</td>
                <td>{{ company.stripeId }}</td>
                <td>{{ company.iban }}</td>
                <td>{{ company.tva ? 'Yes' : 'No' }}</td>
                <td>{{ company.tvaReason }}</td>
                <td>{{ company.createdAt ? company.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.updatedAt ? company.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('super_admin_app_company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('super_admin_app_company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('super_admin_app_company_new') }}">Create new</a>
{% endblock %}
